<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
    <?include $(sys.CURRENTDIR)\Config.wxi?>
    <Fragment>
            <StandardDirectory Id="ProgramMenuFolder">
                <Directory Id="D.ProgramMenuDir" Name="$(var.Product_Name)">
                    <Component Id="C.ProgramMenuDir">
                        <Shortcut Id="S.Uninstall" Name="Uninstall $(var.Product_Name)" Target="[SystemFolder]msiexec.exe" Arguments="/x [ProductCode]" Description="Uninstalls the $(var.Product_Name) Application" />
                        <Shortcut Id="S.MainExeProgramMenu" Name="$(var.Product_Name)" WorkingDirectory="INSTALLFOLDER" Icon="I.MainIcon.ico" IconIndex="0" Target="[INSTALLFOLDER]$(var.MainExeID)" />
                        
                        <RemoveFolder Id="RF.ProgramMenuDir" Directory="D.ProgramMenuDir" On="uninstall" />
                        
                        <RegistryKey Id="RK.RegProgramMenuShortcut" Root="HKCU" Key="SOFTWARE\[Manufacturer]\[ProductName]" ForceDeleteOnUninstall="yes">
                            <RegistryValue Type="integer" Name="PMSC" Value="1" KeyPath="yes" />
                        </RegistryKey>
                    </Component>

                    <StandardDirectory Id="StartupFolder">
                        <Component Id="C.StartupFolder">
                            <RegistryKey Id="RK.RegStartupShortcut" Root="HKCU" Key="SOFTWARE\[Manufacturer]\[ProductName]" ForceDeleteOnUninstall="yes">
                                <RegistryValue Type="integer" Name="STSC" Value="1" KeyPath="yes" />
                            </RegistryKey>
                            <Shortcut Id="S.MainExeStartup" Name="$(var.Product_Name)" WorkingDirectory="INSTALLFOLDER" Icon="I.MainIcon.ico" IconIndex="0" Target="[INSTALLFOLDER]$(var.MainExeID)" />
                        </Component>
                    </StandardDirectory>
                </Directory>
            </StandardDirectory>
        </Fragment>
</Wix>